@using System.Data
@model DataTable

@{
    ViewBag.Title = "Page2";
}



<table border ="1">
    <tr>
        @foreach(DataColumn dataColumn in Model.Columns){
            string columnName = char.ToUpper(dataColumn.ColumnName[0]) + dataColumn.ColumnName.Substring(1);
            <th>@columnName</th> 
        }
    </tr>
    @foreach (DataRow studyProgramRow in Model.Rows)
    {
        <tr>
            @for (int i = 0; i < Model.Columns.Count; ++i)
            {
                <td>@studyProgramRow[i]</td>
            }
        </tr>
    }
</table>
@Html.ActionLink("Back to home", "Index", "Home")


@section PageHeader {
    <h2>List of all aliens</h2>
}