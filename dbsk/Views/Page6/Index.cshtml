@using System.Data
@model DataTable

@{
    ViewBag.Title = "Page6";
}

<form method="post" action="@Url.Action("UpdateDanger", "Page6")">
    <label>
        Alien ID:
        <input type="text" name="ID" value="" placeholder="Insert ID.." />
        Danger:
        <select name="Danger">
            @foreach (var dr in ViewBag.DangerTable.Rows)
            {
                <option value="@dr["DangerCode"]">@dr["DangerName"]</option>
            }
        </select>
    </label>
    <input type="submit" value="Update" />
</form>




<table border="1">
    <tr>
        @foreach (DataColumn dataColumn in Model.Columns)
        {
            string columnName = char.ToUpper(dataColumn.ColumnName[0]) + dataColumn.ColumnName.Substring(1);
            <th>@columnName</th>
        }
    </tr>
    @foreach (DataRow studyProgramRow in Model.Rows)
    {
        <tr>
            @for (int i = 0; i < Model.Columns.Count; ++i)
            {
                <td>@studyProgramRow[i]</td>
            }
        </tr>
    }
</table>
@Html.ActionLink("Back to home", "Index", "Home")


@section PageHeader {
    <h2>Update aliens</h2>
}